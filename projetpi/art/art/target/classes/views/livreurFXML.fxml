<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LivreurFXML">
   <children>
      <VBox layoutX="34.0" layoutY="35.0" prefHeight="200.0" prefWidth="100.0" spacing="15.0">
         <children>
            <Label text="Nom" />
            <Label layoutX="10.0" layoutY="10.0" text="Prenom" />
            <Label layoutX="10.0" layoutY="28.0" text="adresse" />
            <Label layoutX="10.0" layoutY="45.0" text="Telephone" />
            <Label layoutX="10.0" layoutY="63.0" text="Matricule" />
         </children>
      </VBox>
      <VBox layoutX="105.0" layoutY="29.0" prefHeight="200.0" prefWidth="100.0" spacing="9.0">
         <children>
            <TextField fx:id="tfnom" />
            <TextField fx:id="tfprenom" layoutX="10.0" layoutY="10.0" />
            <TextField fx:id="tfadresse" layoutX="10.0" layoutY="36.0" />
            <TextField fx:id="tftelephone" layoutX="10.0" layoutY="61.0" />
            <TextField fx:id="tfmatricule" layoutX="10.0" layoutY="87.0" />
         </children>
      </VBox>
      <Button fx:id="ajouterbtn" layoutX="106.0" layoutY="230.0" mnemonicParsing="false" onAction="#ajouterLivreur" text="Ajouter" />
      <TableView fx:id="tvlivreurs" layoutX="211.0" layoutY="29.0" onMouseClicked="#getData" prefHeight="334.0" prefWidth="374.0">
        <columns>
          <TableColumn fx:id="colnom" prefWidth="75.0" text="nom" />
          <TableColumn fx:id="colprenom" prefWidth="75.0" text="prenom" />
            <TableColumn fx:id="coladresse" prefWidth="75.0" text="adresse" />
            <TableColumn fx:id="coltelephone" prefWidth="75.0" text="telephone" />
            <TableColumn fx:id="colmatricule" prefWidth="75.0" text="matricule" />
        </columns>
      </TableView>
      <Button fx:id="supprimerbtn" layoutX="513.0" layoutY="363.0" mnemonicParsing="false" onAction="#supprimerLivreur" text="Supprimer" />
      <Button fx:id="modifeirbtn" layoutX="41.0" layoutY="230.0" mnemonicParsing="false" onAction="#modifierLivreur" text="Modifier" />
   </children>
</AnchorPane>
