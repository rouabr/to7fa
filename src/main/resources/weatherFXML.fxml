<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="weatherRoot" prefHeight="279.0" prefWidth="297.0" style="-fx-background-radius: 15px;" styleClass="weather-window" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.WeatherFXML">
   <stylesheets>
      <URL value="@style.css" />
   </stylesheets>
   <children>
      <ImageView fitHeight="279.0" fitWidth="300.0">
         <image>
            <Image url="@assets/bg-min-modified.png" />
         </image>
      </ImageView>

      <!-- City Name Label -->
      <Label fx:id="nameCity" alignment="CENTER" layoutX="28.0" layoutY="22.0" prefHeight="38.0" prefWidth="241.0" text="CITY" textAlignment="JUSTIFY" textFill="#64554b">
         <font>
            <Font size="24.0" />
         </font>
      </Label>

      <!-- Temperature Text -->
      <Text fx:id="temperatureFX" fill="#64554b" layoutX="65.0" layoutY="131.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="170.52539098262787">
         <font>
            <Font size="65.0" />
         </font>
      </Text>

      <!-- Date Label -->
      <Label fx:id="dateTime" alignment="CENTER" contentDisplay="TEXT_ONLY" layoutX="106.0" layoutY="231.0" text="DATE" textAlignment="JUSTIFY" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
      </Label>

      <!-- Weather Icon ImageView -->
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="-51.0" layoutY="60.0" pickOnBounds="true" preserveRatio="true" />

      <!-- Temperature Unit Icon ImageView -->
      <ImageView fx:id="temp_C_F" fitHeight="27.0" fitWidth="43.0" layoutX="106.0" layoutY="140.0">
         <image>
            <Image url="@assets/temperature.png" />
         </image>
      </ImageView>
      <Button fx:id="exitBtn" layoutX="218.0" layoutY="14.0" mnemonicParsing="false" onMouseClicked="#exitClicked" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView fitHeight="38.0" fitWidth="43.0">
               <image>
                  <Image url="@assets/Exit%20button%20icon%20png.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
